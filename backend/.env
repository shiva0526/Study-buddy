# backend/.env - StudyBuddy backend environment variables

# PostgreSQL connection string (update user:password@host:port/dbname as needed)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/study_buddy

OPENAI_API_KEY=your_openai_api_key_here
YT_API_KEY=your_youtube_api_key_here


# Embedding dimension (reduce to 128 or 256 to save cost/storage)
EMB_DIM=256

# Chunking defaults
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Debug mode - set to False in production
DEBUG=True

# Optional secret for signing tokens (if you add auth later)
SECRET_KEY=replace-with-a-secure-random-string
